# OllamaMax - Custom Port Configuration (12925-12998)
# Environment variables for Docker deployment with custom port range

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
APP_NAME=OllamaMax
APP_VERSION=1.0.0

# ===========================================
# Core Services Configuration
# ===========================================
# Main API Gateway
API_PORT=12925
API_HOST=0.0.0.0

# Ollama AI Engine
OLLAMA_PORT=12926
OLLAMA_HOST=0.0.0.0
OLLAMA_MODELS=/root/.ollama/models

# Redis Cache
REDIS_PORT=12927
REDIS_PASSWORD=

# BMad Agents Service
BMAD_AGENTS_PORT=12928
BMAD_ENABLED=true
BMAD_CONFIG_PATH=./.bmad-core
BMAD_WORKSPACE=/app/workspace

# Load Balancer
NGINX_PORT=12929

# ===========================================
# Monitoring Configuration
# ===========================================
# Prometheus
PROMETHEUS_PORT=12930
PROMETHEUS_RETENTION=200h

# Grafana
GRAFANA_PORT=12931
GRAFANA_ADMIN_PASSWORD=admin123

# Redis Commander
REDIS_COMMANDER_PORT=12932

# ===========================================
# Storage Configuration
# ===========================================
# MinIO Object Storage
MINIO_PORT=12933
MINIO_CONSOLE_PORT=12934
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Ollama WebUI
WEBUI_PORT=12935
WEBUI_SECRET_KEY=ollama-webui-secret-key

# ===========================================
# Performance Configuration
# ===========================================
# Memory Limits (in MB)
API_MEMORY_LIMIT=512
OLLAMA_MEMORY_LIMIT=4096
REDIS_MEMORY_LIMIT=256
BMAD_MEMORY_LIMIT=1024

# CPU Limits
API_CPU_LIMIT=1.0
OLLAMA_CPU_LIMIT=4.0
BMAD_CPU_LIMIT=2.0

# ===========================================
# Health Check Configuration
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10