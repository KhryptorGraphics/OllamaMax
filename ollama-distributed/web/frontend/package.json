{
  "name": "ollamamax-frontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run pwa:icons && vite build",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --project=visual",
    "test:a11y": "playwright test --project=accessibility",
    "test:perf": "playwright test --project=performance",
    "test:pwa": "playwright test tests/pwa/",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:pwa",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,json}\"",
    "lighthouse": "lhci autorun",
    "lighthouse:pwa": "lhci autorun --collect.settings.onlyCategories=pwa",
    "analyze": "vite build --mode analyze",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "docker:build": "docker build -t ollama-frontend .",
    "docker:run": "docker run -p 8080:8080 ollama-frontend",
    "pwa:icons": "node scripts/generate-pwa-icons.js",
    "pwa:audit": "npm run lighthouse:pwa",
    "pwa:test": "npm run test:pwa",
    "pwa:validate": "npm run pwa:icons && npm run build && npm run pwa:audit && npm run pwa:test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@ollamamax/api-client": "0.1.0",
    "@ollamamax/bridge": "0.1.0",
    "@ollamamax/design-tokens": "0.1.0",
    "@ollamamax/ui": "0.1.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.1",
    "recharts": "^2.15.4",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@chromatic-com/storybook": "^4.1.0",
    "@playwright/test": "^1.54.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/recharts": "^1.8.29",
    "@types/styled-components": "^5.1.34",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "cypress": "^14.5.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.2",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^16.1.5",
    "lucide-react": "^0.460.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "storybook": "^9.1.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-checker": "^0.10.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": "eslint --fix"
  }
}
