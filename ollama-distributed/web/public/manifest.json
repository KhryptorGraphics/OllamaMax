{
  "name": "OllamaMax Distributed System",
  "short_name": "OllamaMax",
  "description": "Distributed AI inference system with advanced fault tolerance and real-time monitoring",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#0ea5e9",
  "background_color": "#ffffff",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["productivity", "utilities", "developer"],
